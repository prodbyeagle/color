{
	"name": "@prodbyeagle/color",
	"version": "0.0.2",
	"description": "A lightweight TypeScript library for extracting and formatting dominant colors from images.",
	"license": "MIT",
	"author": "prodbyeagle",
	"private": false,
	"type": "module",
	"repository": "https://github.com/prodbyeagle/color",
	"homepage": "https://github.com/prodbyeagle/color#readme",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"packageManager": "bun@1.2.11",
	"engines": {
		"bun": ">=1.2.11"
	},
	"scripts": {
		"clean": "bun rm dist",
		"cook": "bun run clean && bun run build:js && bun run build:types",
		"build:js": "bun build ./src/index.ts --sourcemap=external --outdir dist --target=node",
		"build:types": "tsc --emitDeclarationOnly --project tsconfig.json"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@types/bun": "^1.2.11"
	}
}
